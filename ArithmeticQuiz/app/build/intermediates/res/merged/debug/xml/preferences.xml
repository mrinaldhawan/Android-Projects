<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
   xmlns:android="http://schemas.android.com/apk/res/android">

   <ListPreference
      android:entries="@array/guesses_list"
      android:entryValues="@array/guesses_list"
      android:key="pref_numberOfChoices"
      android:title="@string/number_of_choices"
      android:summary="@string/number_of_choices_description"
      android:persistent="true"
      android:defaultValue="4" />

   <MultiSelectListPreference
      android:entries="@array/operator_list_for_settings"
      android:entryValues="@array/operator_list"
      android:key="pref_operatorsToInclude"
      android:title="@string/Operators"
      android:summary="@string/Operators_description"
      android:persistent="true"
      android:defaultValue="@array/operator_list" />
</PreferenceScreen>